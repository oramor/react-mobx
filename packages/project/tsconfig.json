{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ES2020",
        "target": "ESNext",
        "rootDir": ".",
        "outDir": "_public",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx"
    },
    "include": [
        "**/*"
    ]
}